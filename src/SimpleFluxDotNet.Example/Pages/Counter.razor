@page "/counter"
@using SimpleFluxDotNet.Abstractions

@inherits FluxComponent<ExampleState>

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @State.Current.Counter</p>

<button class="btn btn-primary" @onclick="() => State.DispatchAsync<IncrementCounterButtonClickedAction>()">Click me</button>